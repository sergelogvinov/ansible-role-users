# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm)          color_prompt=yes;;
    xterm-color)    color_prompt=yes;;
    xterm-256color) color_prompt=yes;;
esac

if [ "$color_prompt" = yes ]; then
{% if users_color_schema != '' %}
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;33m\]\u{{ users_color_schema }}@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
{% else  %}
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;33m\]\u\[\033[01;32m\]@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
{% endif %}
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt
